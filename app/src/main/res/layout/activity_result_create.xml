<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingHorizontal="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icBack"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_back_setting" />

        <TextView
            android:id="@+id/txtResut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_weight="1"
            android:fontFamily="@font/bv_500"
            android:includeFontPadding="false"
            android:text="@string/result"
            android:textSize="@dimen/_13sdp" />

        <ImageView
            android:id="@+id/icEdit"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_back_setting"
            android:visibility="invisible" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.dong.baselib.widget.layout.UiLinearLayout
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_140sdp"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_24sdp"
                android:padding="@dimen/_4sdp"
                app:bgColorDark="@color/white"
                app:bgColorLight="@color/white"
                app:cornerRadius="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:stColorDark="@color/color_e0e0e0"
                app:stColorLight="@color/color_e0e0e0"
                app:strokeWidth="1dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/imgResult"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true" />
            </com.dong.baselib.widget.layout.UiLinearLayout>

            <com.dong.baselib.widget.layout.UiLinearLayout
                android:layout_marginTop="@dimen/_18sdp"
                app:cornerRadius="@dimen/_12sdp"
                android:id="@+id/lnResult"
                app:bgColorLight="@color/white"
                android:layout_marginHorizontal="@dimen/_32sdp"
                app:bgColorDark="@color/white"

                android:layout_width="match_parent"
                android:padding="@dimen/_12sdp"
                android:layout_height="wrap_content">

            </com.dong.baselib.widget.layout.UiLinearLayout>


            <com.dong.baselib.widget.layout.UiRowLayout
                android:layout_marginTop="@dimen/_24sdp"
                app:justifyContent="space_evenly"
                android:layout_width="match_parent"
                android:id="@+id/lnMenu"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_height="wrap_content">

                <com.dong.baselib.widget.view.RoundImageView
                    android:layout_width="@dimen/_36sdp"
                    android:src="@drawable/ic_add_coppy"
                    android:id="@+id/icCoppy"
                    android:layout_height="@dimen/_36sdp"/>

                <com.dong.baselib.widget.view.RoundImageView
                    android:layout_width="@dimen/_36sdp"
                    android:src="@drawable/ic_add_save"
                    android:id="@+id/icSave"
                    android:layout_height="@dimen/_36sdp"/>

                <com.dong.baselib.widget.view.RoundImageView
                    android:layout_width="@dimen/_36sdp"
                    android:src="@drawable/ic_add_share"
                    android:id="@+id/icShare"
                    android:layout_height="@dimen/_36sdp"/>

                <com.dong.baselib.widget.view.RoundImageView
                    android:layout_width="@dimen/_36sdp"
                    android:src="@drawable/ic_add_share"
                    android:id="@+id/icOther"
                    android:layout_height="@dimen/_36sdp"/>


            </com.dong.baselib.widget.layout.UiRowLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>














































