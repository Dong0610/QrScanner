<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBackPress"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:padding="@dimen/_9sdp"
            android:src="@drawable/ic_back_setting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bv_600"
            android:includeFontPadding="false"
            android:text="@string/settings"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivPremium"
            app:layout_constraintStart_toEndOf="@+id/ivBackPress"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivPremium"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:padding="@dimen/_9sdp"
            android:src="@drawable/ic_premium_setting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gradientS" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <com.dong.baselib.widget.layout.UiLinearLayout
            android:layout_width="match_parent"
            app:strokeWidth="0.5dp"
            android:id="@+id/llLanguage"
            app:stColorDark="#C8C8C8"
            app:bgColorDark="@color/white"
            app:bgColorLight="@color/white"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_6sdp"
            app:cornerRadius="@dimen/_8sdp"
            android:gravity="center_vertical"
            app:stColorLight="#C8C8C8"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingHorizontal="@dimen/_3sdp"
                android:layout_width="@dimen/_32sdp"
                android:src="@drawable/ic_setting_01"
                android:layout_height="@dimen/_32sdp"/>
            <TextView
                android:fontFamily="@font/bv_500"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/_4ssp"
                android:textSize="@dimen/_12ssp"
                android:text="@string/language_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.dong.baselib.widget.layout.UiLinearLayout>
        <com.dong.baselib.widget.layout.UiLinearLayout
            android:layout_width="match_parent"
            app:strokeWidth="0.5dp"
            android:layout_marginTop="@dimen/_12sdp"
            app:stColorDark="#C8C8C8"
            app:bgColorDark="@color/white"
            app:bgColorLight="@color/white"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_6sdp"
            app:cornerRadius="@dimen/_8sdp"
            android:gravity="center_vertical"
            app:stColorLight="#C8C8C8"
            android:layout_height="wrap_content">



            <ImageView
                android:paddingHorizontal="@dimen/_3sdp"
                android:layout_width="@dimen/_32sdp"
                android:src="@drawable/ic_vibrate_scan"
                android:layout_height="@dimen/_32sdp"/>
            <TextView
                android:fontFamily="@font/bv_500"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/_4ssp"
                android:textSize="@dimen/_12ssp"
                android:layout_weight="1"
                android:text="@string/vibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.dong.baselib.widget.view.GradientSwitch
                android:id="@+id/swVibrate"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.dong.baselib.widget.layout.UiLinearLayout>
        <com.dong.baselib.widget.layout.UiLinearLayout
            android:layout_width="match_parent"
            app:strokeWidth="0.5dp"
            app:stColorDark="#C8C8C8"
            app:bgColorDark="@color/white"
            app:bgColorLight="@color/white"
            android:paddingHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:paddingVertical="@dimen/_6sdp"
            app:cornerRadius="@dimen/_8sdp"
            android:gravity="center_vertical"
            app:stColorLight="#C8C8C8"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingHorizontal="@dimen/_3sdp"
                android:layout_width="@dimen/_32sdp"
                android:src="@drawable/ic_volume_scan"
                android:layout_height="@dimen/_32sdp"/>
            <TextView
                android:fontFamily="@font/bv_500"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/_4ssp"
                android:textSize="@dimen/_12ssp"
                android:text="@string/sound"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.dong.baselib.widget.view.GradientSwitch
                android:id="@+id/swSound"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.dong.baselib.widget.layout.UiLinearLayout>
        <com.dong.baselib.widget.layout.UiLinearLayout
            android:layout_width="match_parent"
            app:strokeWidth="0.5dp"
            android:id="@+id/llShare"
            android:layout_marginTop="@dimen/_12sdp"
            app:stColorDark="#C8C8C8"
            app:bgColorDark="@color/white"
            app:bgColorLight="@color/white"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_6sdp"
            app:cornerRadius="@dimen/_8sdp"
            android:gravity="center_vertical"
            app:stColorLight="#C8C8C8"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingHorizontal="@dimen/_3sdp"
                android:layout_width="@dimen/_32sdp"
                android:src="@drawable/ic_setting_02"
                android:layout_height="@dimen/_32sdp"/>
            <TextView
                android:fontFamily="@font/bv_500"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/_4ssp"
                android:textSize="@dimen/_12ssp"
                android:text="@string/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.dong.baselib.widget.layout.UiLinearLayout>

        <com.dong.baselib.widget.layout.UiLinearLayout
            android:layout_width="match_parent"
            app:strokeWidth="0.5dp"
            android:id="@+id/llAbout"
            android:layout_marginTop="@dimen/_12sdp"
            app:stColorDark="#C8C8C8"
            app:bgColorDark="@color/white"
            app:bgColorLight="@color/white"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_6sdp"
            app:cornerRadius="@dimen/_8sdp"
            android:gravity="center_vertical"
            app:stColorLight="#C8C8C8"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingHorizontal="@dimen/_3sdp"
                android:layout_width="@dimen/_32sdp"
                android:src="@drawable/ic_setting_07"
                android:layout_height="@dimen/_32sdp"/>
            <TextView
                android:fontFamily="@font/bv_500"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/_4ssp"
                android:textSize="@dimen/_12ssp"
                android:text="@string/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.dong.baselib.widget.layout.UiLinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>