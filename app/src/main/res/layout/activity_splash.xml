<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:contentDescription="Logo app"
        android:id="@+id/imageView"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        tools:ignore="HardcodedText" />

    <com.dong.baselib.widget.view.UiTextView
        android:id="@+id/textView2"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_19sdp"
        android:layout_marginHorizontal="@dimen/_24sdp"
        android:fontFamily="@font/bv_600"
        android:text="@string/app_name"
        android:textAlignment="center"
        app:tvColorDark="@color/white"
        app:tvColorLight="@color/black"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <com.dong.baselib.widget.view.UiTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:fontFamily="@font/bv_400"
        android:includeFontPadding="false"
        android:text="@string/this_action_may_contain_advertising"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/_12sdp"
        android:textSize="@dimen/_12sdp"
       app:textGradientEnd="#A382EA"
        app:textGradient="true"
        app:textGradientStart="#5B6CF9"
        app:layout_constraintBottom_toTopOf="@+id/progressIndicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tvColorDark="#BFC2C7"
        app:tvColorLight="#BFC2C7" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressIndicator"
        android:layout_width="0dp"
        android:layout_margin="@dimen/_24sdp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_1sdp"
        android:indeterminate="true"
        app:indicatorColor="#3965FC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_marginBaseline="@dimen/_2sdp"
        app:trackColor="#141A83FA"
        app:trackThickness="@dimen/_5sdp"
        app:trackCornerRadius="@dimen/_5sdp" />



</androidx.constraintlayout.widget.ConstraintLayout>