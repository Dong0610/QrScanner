<?xml version="1.0" encoding="utf-8"?>
<com.dong.baselib.widget.layout.UiLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:weightSum="3"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:id="@+id/resultTitle"
        android:textColor="@color/black"
        android:fontFamily="@font/bv_500"
        android:layout_weight="0.8"
        android:layout_marginEnd="@dimen/_6sdp"
        android:textSize="@dimen/_11sdp"
        android:includeFontPadding="false"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="0dp"
        android:id="@+id/resultContent"
        android:layout_marginStart="@dimen/_4sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/bv_500"
        android:layout_weight="2.2"
        android:textSize="@dimen/_11sdp"
        android:includeFontPadding="false"
        android:layout_height="wrap_content"/>

</com.dong.baselib.widget.layout.UiLinearLayout>