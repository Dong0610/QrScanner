<?xml version="1.0" encoding="utf-8"?>
<com.dong.baselib.widget.layout.UiLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:padding="@dimen/_10sdp"
    app:strokeGdOrientation="tl_br"
    app:cornerRadius="@dimen/_12ssp"
    app:bgColorLight="@color/color_bg_def"
    app:stColorDark="@color/transfer"
    app:stColorLight="@color/transfer"
    app:strokeWidth="1.8dp">

    <com.dong.baselib.widget.view.RoundImageView
        android:id="@+id/icLang"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:contentDescription="Language"
        app:cornerRadius="@dimen/_30sdp"
        android:src="@drawable/ic_lang_en"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:stColorDark="@color/color_e0e0e0"
        app:stColorLight="@color/color_e0e0e0"
        app:strokeWidth="1.2dp"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/langName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_8sdp"
        android:fontFamily="@font/bv_400"
        android:includeFontPadding="false"
        android:text="English"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp" />
</com.dong.baselib.widget.layout.UiLinearLayout>