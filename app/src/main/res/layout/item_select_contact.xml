<?xml version="1.0" encoding="utf-8"?>
<com.dong.baselib.widget.layout.UiLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:strokeWidth="1.2dp"
    app:stColorDark="@color/transfer"
    app:stColorLight="@color/transfer"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/_16sdp"
    android:paddingVertical="@dimen/_8sdp"
    app:bgColorDark="@color/white"
    app:bgColorLight="@color/white"
    app:cornerRadius="@dimen/_12sdp">

    <com.dong.baselib.widget.view.RoundImageView
        android:layout_width="@dimen/_28sdp"
        android:id="@+id/srcView"
        android:layout_height="@dimen/_28sdp"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/ic_account_circle"
        app:bgColorDark="@color/Blue_Lotus"
        app:bgColorLight="@color/Blue_Lotus"
        app:cornerRadius="@dimen/_30sdp"
        app:gradientIcons="#ffffff #ffffff" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bv_500"
            android:includeFontPadding="false"
            android:text="Hello, world"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/bv_400"
            android:includeFontPadding="false"
            android:text="Hello, world"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

</com.dong.baselib.widget.layout.UiLinearLayout>